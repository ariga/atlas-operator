db postgres:15.4 DB_URL
kubectl create secret generic db-creds --from-literal=url=${DB_URL}

# Wait for the first pod created
kubectl-wait-available deploy/postgres
# Wait for the DB ready before creating the schema
kubectl-wait-ready -l app=postgres pods

# Create the schema without index
kubectl apply -f schema.yaml
kubectl-wait-ready AtlasSchema/postgres
# Inspect the schema to ensure it's correct
atlas schema inspect -u ${DB_URL}
cmp stdout schema-v1.hcl

# Patch to add index with concurrent_index policy
kubectl patch AtlasSchema/postgres --type merge --patch-file patch-add-index.yaml
# Ensure the controller is aware of the change
kubectl wait --for=condition=ready=false --timeout=2h AtlasSchema/postgres
kubectl-wait-ready AtlasSchema/postgres
# Verify concurrent index creation statement was used
kubectl get AtlasSchema/postgres -o jsonpath='{.status.conditions[?(@.type=="Ready")].message}'
stdout 'CREATE INDEX CONCURRENTLY'
# Inspect the schema to ensure the index was created
atlas schema inspect -u ${DB_URL}
cmp stdout schema-v2.hcl

# Patch to remove index with concurrent_index policy
kubectl patch AtlasSchema/postgres --type merge --patch-file patch-remove-index.yaml
# Ensure the controller is aware of the change
kubectl wait --for=condition=ready=false --timeout=2h AtlasSchema/postgres
kubectl-wait-ready AtlasSchema/postgres
# Verify concurrent index drop statement was used
kubectl get AtlasSchema/postgres -o jsonpath='{.status.conditions[?(@.type=="Ready")].message}'
stdout 'DROP INDEX CONCURRENTLY'
# Inspect the schema to ensure the index was dropped
atlas schema inspect -u ${DB_URL}
cmp stdout schema-v1.hcl
