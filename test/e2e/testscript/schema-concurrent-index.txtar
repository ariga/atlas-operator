-- patch-add-index.yaml --
spec:
  schema:
    sql: |
      create table users (
        id int not null,
        name varchar(255) not null,
        email varchar(255) not null,
        primary key (id)
      );
      create index email_idx on users (email);
-- patch-remove-index.yaml --
spec:
  schema:
    sql: |
      create table users (
        id int not null,
        name varchar(255) not null,
        email varchar(255) not null,
        primary key (id)
      );
-- schema.yaml --
apiVersion: db.atlasgo.io/v1alpha1
kind: AtlasSchema
metadata:
  name: postgres
spec:
  urlFrom:
    secretKeyRef:
      name: db-creds
      key: url
  policy:
    diff:
      concurrent_index:
        create: true
        drop: true
  schema:
    sql: |
      create table users (
        id int not null,
        name varchar(255) not null,
        email varchar(255) not null,
        primary key (id)
      );