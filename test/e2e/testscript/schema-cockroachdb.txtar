db cockroachdb/cockroach:latest DB_URL
kubectl create secret generic db-creds --from-literal=url=${DB_URL}

# Wait for the first pod to be created
kubectl-wait-available deploy/cockroachdb
# Wait for the DB ready before creating the schema
kubectl-wait-ready -l app=cockroachdb pods

# Create the secret to store ATLAS_TOKEN
kubectl create secret generic atlas-token --from-literal=ATLAS_TOKEN=${ATLAS_TOKEN}

# Create the configmap to store the schema.sql
kubectl create configmap crdb-schema --from-file=./schema-v1 --dry-run=client -o yaml
stdin stdout
kubectl apply -f -

# Create the schema
kubectl apply -f schema.yaml
kubectl-wait-ready AtlasSchema/cockroachdb

# Inspect the schema to ensure it's correct
atlas schema inspect -u ${DB_URL}
cmp stdout schema-v1.hcl

# Make sure the dev database is automatically created
kubectl get deployment cockroachdb-atlas-dev-db -o jsonpath='{.spec.template.spec.containers[0].image}'
stdout cockroachdb/cockroach:latest
-- schema-v1.hcl --
table "users" {
  schema = schema.public
  column "id" {
    null = false
    type = bigint
    default = sql("unique_rowid()")
  }
  column "name" {
    null = false
    type = character_varying(255)
  }
  column "email" {
    null = false
    type = character_varying(255)
  }
  column "short_bio" {
    null = false
    type = character_varying(255)
  }
  primary_key {
    columns = [column.id]
  }
  unique "users_email_key" {
    columns = [column.email]
  }
}
schema "public" {
}
-- schema-v1/schema.sql --
create table users (
  id serial primary key,
  name varchar(255) not null,
  email varchar(255) unique not null,
  short_bio varchar(255) not null
);
-- schema.yaml --
apiVersion: db.atlasgo.io/v1alpha1
kind: AtlasSchema
metadata:
  name: cockroachdb
spec:
  urlFrom:
    secretKeyRef:
      name: db-creds
      key: url
  cloud:
    tokenFrom:
      secretKeyRef:
        name: atlas-token
        key: ATLAS_TOKEN
  schema:
    configMapKeyRef:
      key: schema.sql
      name: crdb-schema
