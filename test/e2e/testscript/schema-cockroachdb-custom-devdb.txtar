db cockroachdb/cockroach:latest DB_URL
kubectl create secret generic db-creds --from-literal=url=${DB_URL}

# Wait for the first pod to be created
kubectl-wait-available deploy/cockroachdb
# Wait for the DB ready before creating the schema
kubectl-wait-ready -l app=cockroachdb pods

# Create the configmap to store the schema.sql
kubectl create configmap crdb-schema --from-file=./schema-v1 --dry-run=client -o yaml
stdin stdout
kubectl apply -f -

# Create the schema
kubectl apply -f schema.yaml
kubectl-wait-ready AtlasSchema/cockroachdb

kubectl get -o jsonpath --template='{.status.observed_hash}' AtlasSchema/cockroachdb
stdout oAoRLC2AXyGha6pKDollSqBB5ovjB\+qK78aAN9dkOow\=

# Make sure the dev database with the custom container is created
kubectl get deployment cockroachdb-atlas-dev-db -o jsonpath='{.spec.template.spec.containers[0].name}'
stdout cockroachdb-dev-foo

-- schema-v1/schema.sql --
create table users (
  id serial primary key,
  name varchar(255) not null,
  email varchar(255) unique not null,
  short_bio varchar(255) not null
);
-- schema.yaml --
apiVersion: db.atlasgo.io/v1alpha1
kind: AtlasSchema
metadata:
  name: cockroachdb
spec:
  urlFrom:
    secretKeyRef:
      name: db-creds
      key: url
  schema:
    configMapKeyRef:
      key: schema.sql
      name: crdb-schema
  devURL: postgres://root:pass@localhost:26257/dev?sslmode=disable
  devDB:
    spec:
      containers:
        - name: cockroachdb-dev-foo
          image: cockroachdb/cockroach:latest
          args: ["start-single-node", "--insecure"]
          env:
            - name: COCKROACH_DATABASE
              value: dev
          ports:
            - containerPort: 26257
              name: cockroachdb
          readinessProbe:
            exec:
              command:
                - cockroach
                - sql
                - --insecure
                - -e
                - SELECT 1
            periodSeconds: 5
            failureThreshold: 3
          startupProbe:
            exec:
              command: ["cockroach", "init", "--insecure"]
            failureThreshold: 30
            periodSeconds: 10

