env DB_URL=postgres://root:pass@postgres.${NAMESPACE}:5432/postgres?sslmode=disable
kubectl apply -f database.yaml
kubectl create secret generic db-creds --from-literal=url=${DB_URL}

# Wait for the first pod created
kubectl-wait-available deploy/postgres
# Wait for the DB ready before creating the schema
kubectl-wait-ready -l app=postgres pods

kubectl apply -f schema.yaml
kubectl-wait-ready AtlasSchema/postgres-extensions

# Inspect the schema to ensure it's correct
atlas schema inspect -u ${DB_URL}
cmp stdout schema.hcl
-- schema.hcl --
table "t1" {
  schema = schema.public
  column "c1" {
    null = false
    type = uuid
    default = "public.uuid_generate_v4()"
  }
  column "c2" {
    null = false
    type = character_varying(100)
  }
  primary_key {
    columns = [column.c1]
  }
}
table "t2" {
  schema = schema.public
  column "c1" {
    null = false
    type = uuid
    default = "public.uuid_generate_v4()"
  }
  column "c2" {
    null = false
    type = character_varying(255)
  }
  primary_key {
    columns = [column.c1]
  }
}
schema "public" {
  comment = "standard public schema"
}
-- schema.yaml --
apiVersion: db.atlasgo.io/v1alpha1
kind: AtlasSchema
metadata:
  name: postgres-extensions
spec:
  urlFrom:
    secretKeyRef:
      name: db-creds
      key: url
  schema:
    sql: |
      CREATE EXTENSION IF NOT EXISTS "uuid-ossp";
      
      CREATE SCHEMA IF NOT EXISTS "public";
      
      CREATE TABLE public.t1 (
          c1 UUID PRIMARY KEY DEFAULT uuid_generate_v4(),
          c2 VARCHAR(100) NOT NULL
      );
      
      CREATE TABLE public.t2 (
          c1 UUID PRIMARY KEY DEFAULT uuid_generate_v4(),
          c2 VARCHAR(255) NOT NULL
      );
-- database.yaml --
apiVersion: v1
kind: Service
metadata:
  name: postgres
spec:
  selector:
    app: postgres
  ports:
    - name: postgres
      port: 5432
      targetPort: postgres
  type: ClusterIP
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: postgres
spec:
  selector:
    matchLabels:
      app: postgres
  replicas: 1
  template:
    metadata:
      labels:
        app: postgres
    spec:
      securityContext:
        runAsNonRoot: true
        runAsUser: 999
      containers:
        - name: postgres
          image: postgres:15.4
          securityContext:
            allowPrivilegeEscalation: false
            capabilities:
              drop:
                - all
          env:
            - name: POSTGRES_PASSWORD
              value: pass
            - name: POSTGRES_USER
              value: root
          ports:
            - containerPort: 5432
              name: postgres
          startupProbe:
            exec:
              command: [ "pg_isready" ]
            failureThreshold: 30
            periodSeconds: 10

