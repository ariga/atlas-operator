apiVersion: db.atlasgo.io/v1alpha1
kind: AtlasSchema
metadata:
  name: mariadb
spec:
  urlFrom:
    secretKeyRef:
      name: db-creds
      key: url
  policy:
    lint:
      destructive:
        error: true
    diff:
      skip:
