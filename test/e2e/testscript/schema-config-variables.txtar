db postgres SCHEMA_DB_URL
db postgres SCHEMA_DB_DEV_URL postgres-dev
kubectl create secret generic schema-db-creds --from-literal=url=${SCHEMA_DB_URL}
kubectl create configmap schema-db-dev-creds --from-literal=url=${SCHEMA_DB_DEV_URL}
# Create the secret to store ATLAS_TOKEN
kubectl create secret generic atlas-token --from-literal=ATLAS_TOKEN=${ATLAS_TOKEN}

# Create the schema
kubectl apply -f schema.yaml
kubectl wait --for=jsonpath='{.status.conditions[?(@.type=="Ready")].reason}'=Applied --timeout=2h AtlasSchemas/sample

# Patch a invalid config of schema from secret
kubectl create secret generic schema-config --from-file=config.hcl
kubectl patch -f schema.yaml --type merge --patch-file patch-schema-config-from-configmap.yaml
kubectl wait --for=jsonpath='{.status.conditions[?(@.type=="Ready")].reason}'=Applied --timeout=2h AtlasSchemas/sample

-- schema.yaml --
apiVersion: db.atlasgo.io/v1alpha1
kind: AtlasSchema
metadata:
  name: sample
spec:
  envName: "test"
  schema:
    sql: |
      create table users (
        id int not null,
        name varchar(255) not null,
        email varchar(255) unique not null,
        short_bio varchar(255) not null,
        primary key (id)
      );
  cloud:
    repo: atlas-operator
    tokenFrom:
      secretKeyRef:
        name: atlas-token
        key: ATLAS_TOKEN
  vars: 
    - key: "db_url"
      valueFrom: 
        secretKeyRef:
          name: schema-db-creds
          key: url
    - key: "dev_db_url"
      valueFrom: 
        configMapKeyRef:
          name: schema-db-dev-creds
          key: url
  config: |
    variable "db_url" {
      type = string
    }
    variable "dev_db_url" {
      type = string
    }
    env "test" {
      url = var.db_url
      dev = var.dev_db_url
    }
-- patch-schema-config-from-configmap.yaml --
spec:
  config:
  configFrom:
    secretKeyRef:
      name: schema-config
      key: config.hcl
-- config.hcl --
variable "db_url" {
  type = string
}
variable "dev_db_url" {
  type = string
}
env "test" {
  url = var.db_url
  dev = var.dev_db_url
}
