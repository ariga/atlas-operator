db mcr.microsoft.com/mssql/server:2022-latest DB_URL
kubectl create secret generic db-creds --from-literal=url=${DB_URL}

# Wait for the first pod created
kubectl-wait-available deploy/sqlserver
# Wait for the DB ready before creating the schema
kubectl-wait-ready -l app=sqlserver pods

# Create the secret to store ATLAS_TOKEN
kubectl create secret generic atlas-token --from-literal=ATLAS_TOKEN=${ATLAS_TOKEN}

# Create the schema
kubectl apply -f schema.yaml
kubectl-wait-ready AtlasSchema/sqlserver

# Inspect the schema to ensure it's correct
atlas schema inspect -u ${DB_URL}
cmp stdout schema.hcl
-- schema.hcl --
table "t1" {
  schema = schema.dbo
  column "id" {
    null = false
    type = int
  }
  primary_key {
    columns = [column.id]
  }
}
schema "dbo" {
}
-- schema.yaml --
apiVersion: db.atlasgo.io/v1alpha1
kind: AtlasSchema
metadata:
  name: sqlserver
spec:
  urlFrom:
    secretKeyRef:
      name: db-creds
      key: url
  cloud:
    tokenFrom:
      secretKeyRef:
        name: atlas-token
        key: ATLAS_TOKEN
  schema:
    sql: |
      create table [t1] (
        [id] int not null,
        constraint PK_t1 primary key ([id])
      );
