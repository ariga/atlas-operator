db mysql DB_URL
kubectl create secret generic db-creds --from-literal=url=${DB_URL}
# Create the schema
kubectl apply -f schema.yaml
kubectl-wait-ready AtlasSchema/mysql

# Inspect the schema to ensure it's correct
atlas schema inspect -u ${DB_URL}
cmp stdout schema.hcl

kubectl patch -f schema.yaml --type merge --patch-file patch-remove-bio.yaml
# Ensure the controller is aware of the change
kubectl wait --for=condition=ready=false --timeout=2h AtlasSchema/mysql

# Ensure the controller is aware of the change
kubectl wait --for=jsonpath='{.status.conditions[?(@.type=="Ready")].reason}'=LintPolicyError --timeout=2h AtlasSchemas/mysql
# Check the error message
kubectl get AtlasSchema/mysql -o jsonpath --template='{.status.conditions[?(@.type=="Ready")].message}'
stdout 'destructive changes detected:'
stdout '- ALTER TABLE `users` DROP COLUMN `short_bio`'
-- schema.hcl --
table "users" {
  schema = schema.dev
  column "id" {
    null           = false
    type           = int
    auto_increment = true
  }
  column "name" {
    null = false
    type = varchar(255)
  }
  column "email" {
    null = false
    type = varchar(255)
  }
  column "short_bio" {
    null = false
    type = varchar(255)
  }
  primary_key {
    columns = [column.id]
  }
  index "email" {
    unique  = true
    columns = [column.email]
  }
}
schema "dev" {
  charset = "utf8mb4"
  collate = "utf8mb4_0900_ai_ci"
}
-- patch-remove-bio.yaml --
spec:
  schema:
    sql: |
      create table users (
        id int not null auto_increment,
        name varchar(255) not null,
        email varchar(255) unique not null,
        primary key (id)
      );
-- schema.yaml --
apiVersion: db.atlasgo.io/v1alpha1
kind: AtlasSchema
metadata:
  name: mysql
spec:
  urlFrom:
    secretKeyRef:
      name: db-creds
      key: url
  policy:
    lint:
      destructive:
        error: true
  schema:
    sql: |
      create table users (
        id int not null auto_increment,
        name varchar(255) not null,
        email varchar(255) unique not null,
        short_bio varchar(255) not null,
        primary key (id)
      );
